generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  // Adjust as needed, can use MySQL or PostgreSQL
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
}
